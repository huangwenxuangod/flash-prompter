{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flash Prompter",
  "version": "0.1.0",
  "identifier": "com.flashprompter.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Flash Prompter",
        "width": 420,
        "height": 300,
        "resizable": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": ["icons/icon.ico"]
  }
}
