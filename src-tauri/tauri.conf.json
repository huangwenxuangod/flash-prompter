{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flash Prompter",
  "version": "0.1.0",
  "identifier": "com.flashprompter.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Flash Prompter",
        "width": 420,
        "height": 300,
        "resizable": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": ["icons/icon.ico"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZBMzVCMzgwOENCRTZCODcKUldTSGE3Nk1nTE0xYWpRd1JCWnh1YTZtRXkyQ0kySW9leUVFZldYSXhXMTlvYWVlU3I2M0NUdGgK",
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{current_version}}"
      ]
    }
  }
}
